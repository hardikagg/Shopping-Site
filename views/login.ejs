<%- include('partials/header') %>


<div class="container" style="margin-bottom: 4rem; padding-top: 4rem;">
  
      <div class="card mx-auto card-manual" style="background-color: #3b6978; color: white;">
        <div class="card-body">
          <h1>Welcome back</h1>
          <form action="/login" method="POST">
            <div class="form-group login-form">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
              
            </div>
            <div class="form-group login-form">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>
          <hr>
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button" style="color: white;">
            <i class="fab fa-google"></i>
            Sign In with Google
          </a>
        </div>
      </div>
    
</div>



